{
  "manifest_version": 3,
  "name": "User Interaction Tracker",
  "version": "1.0",
  "description": "Collect user click, scroll, and input interactions.",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "scripting",
    "webNavigation",
    "desktopCapture"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://www.amazon.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
  }